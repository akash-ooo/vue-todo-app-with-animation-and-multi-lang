{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": true,
    "allowJs": true,      /* Enable JavaScript files to be included in the project */
    "checkJs": false      /* Disable type checking for JavaScript files */
  }
}
